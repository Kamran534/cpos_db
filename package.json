{
  "name": "csu-server",
  "version": "1.0.0",
  "description": "Central Sync & Update server with Swagger, auth, and sync (cron/socket)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --exec tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:dev": "prisma dev",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:generate:pg": "prisma generate --schema prisma/schema.prisma",
    "prisma:generate:sqlite": "prisma generate --schema prisma/schema.sqlite.prisma",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push",
    "prisma:push:pg": "prisma db push --schema prisma/schema.prisma",
    "prisma:push:sqlite": "prisma db push --schema prisma/schema.sqlite.prisma",
    "prisma:reset": "prisma migrate reset --force",
    "prisma:format": "prisma format"
  },
  "keywords": [
    "csu",
    "sync",
    "postgresql",
    "sqlite",
    "swagger",
    "auth",
    "prisma"
  ],
  "author": "TradeUnleashed",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^3.1.7",
    "prisma": "^6.19.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "axios": "^1.7.7",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.15",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
