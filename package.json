{
  "name": "csu-server",
  "version": "1.0.0",
  "description": "Central Sync & Update server with Swagger, auth, and sync (cron/socket)",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:generate:payflow": "prisma generate --schema=./prisma/schema.payflow.prisma",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:init": "prisma migrate dev --name init --create-only",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:studio:payflow": "prisma studio --schema=./prisma/schema.payflow.prisma",
    "prisma:format": "prisma format",
    "prisma:db:push": "prisma db push",
    "prisma:pull": "prisma db pull"
  },
  "keywords": [
    "csu",
    "sync",
    "postgresql",
    "sqlite",
    "swagger",
    "auth",
    "prisma"
  ],
  "author": "TradeUnleashed",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^3.1.7",
    "prisma": "^6.18.0"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.15",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
